<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/easylist_background"
    android:orientation="vertical"
    android:weightSum="9">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:background="#962e8c75"
        android:orientation="horizontal"
        android:padding="8dp">

        <TextView
            android:id="@+id/level_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="20dip"
            android:textColor="@android:color/black"
            android:textSize="40sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/q_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="30dip"
            android:textColor="@android:color/black"
            android:textSize="40sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/teban"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="30dip"
            android:text="@string/first_b"
            android:textColor="@android:color/black"
            android:textSize="40sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="7"

        android:orientation="vertical">

        <!--<ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:id="@+id/stone"/>-->

<!--        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="30"
            android:id="@+id/goban_13" />-->

        <com.example.oubeika.tsumegonomori.GoBoardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="30" />

        <Button
            android:id="@+id/put_stone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:layout_marginRight="92dp"
            android:layout_marginEnd="92dp"
            android:layout_marginLeft="92dp"
            android:layout_marginStart="92dp"
            android:layout_gravity="center"
            android:background="@color/colorPrimaryDark"
            android:text="@string/put_stone"
            android:textSize="40sp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:background="#964a935a"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/button_undo"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/button_undo" />

        <ImageButton
            android:id="@+id/button_redo"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/button_redo" />

        <ImageButton
            android:id="@+id/button_reload"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/button_reload" />

        <ImageButton
            android:id="@+id/button_skip_previous"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/button_skip_previous" />

        <ImageButton
            android:id="@+id/button_skip_next"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/button_skip_next" />

    </LinearLayout>

</LinearLayout>